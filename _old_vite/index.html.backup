    <script>
        // Loading Screen
        window.addEventListener('load', function() {
            const loader = document.getElementById('loading-screen');
            const mainContent = document.getElementById('main-content');
            
            // Wait for all letters to animate in
            setTimeout(() => {
                // Start the slide up animation (slow at first, then fast)
                loader.classList.add('slide-up');
                
                // Show main content
                setTimeout(() => {
                    mainContent.style.opacity = '1';
                }, 300);
                
                // Remove loader from DOM after animation
                setTimeout(() => {
                    loader.style.display = 'none';
                }, 1500);
            }, 2000);
        });

        // Scroll Animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -100px 0px'
        };

        const observer = new IntersectionObserver(function(entries) {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        }, observerOptions);

        document.querySelectorAll('.fade-in').forEach(el => {
            observer.observe(el);
        });

        // Counter Animation
        const counters = document.querySelectorAll('.counter');
        const counterObserver = new IntersectionObserver(function(entries) {
            entries.forEach(entry => {
                if (entry.isIntersecting && !entry.target.classList.contains('counted')) {
                    const target = +entry.target.getAttribute('data-target');
                    const increment = target / 50;
                    let current = 0;
                    
                    const updateCounter = () => {
                        if (current < target) {
                            current += increment;
                            entry.target.textContent = Math.ceil(current);
                            setTimeout(updateCounter, 30);
                        } else {
                            entry.target.textContent = target;
                        }
                    };
                    
                    updateCounter();
                    entry.target.classList.add('counted');
                }
            });
        }, observerOptions);

        counters.forEach(counter => {
            counterObserver.observe(counter);
        });

        // Hero Video Container Scroll Animation
        const heroSection = document.querySelector('section.relative.min-h-screen');
        const videoContainer = document.getElementById('hero-video-container');
        
        window.addEventListener('scroll', () => {
            if (heroSection && videoContainer) {
                const rect = heroSection.getBoundingClientRect();
                const scrollProgress = Math.max(0, Math.min(1, -rect.top / rect.height));
                
                // Scale down from 100% to 95% as user scrolls
                const scale = 1 - (scrollProgress * 0.05);
                videoContainer.style.transform = `scale(${scale})`;
            }
        });
        
        // FAQ Toggle
        function toggleFaq(element) {
            const answer = element.nextElementSibling;
            const icon = element.querySelector('.faq-icon');
            
            answer.classList.toggle('active');
            icon.classList.toggle('active');
        }

        // Logo Banner Scroll Blur Effect
        const logoSection = document.getElementById('logo-banner-section');

        window.addEventListener('scroll', () => {
            const sectionTop = logoSection.getBoundingClientRect().top;
            const triggerPoint = window.innerHeight * 0.9; // Kurz bevor die Sektion sichtbar wird

            if (sectionTop < triggerPoint) {
                logoSection.classList.add('scrolled');
                logoSection.classList.remove('initial');
            } else {
                logoSection.classList.add('initial');
                logoSection.classList.remove('scrolled');
            }
        });
    </script>
